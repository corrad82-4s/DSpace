<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config /> <!-- allows us to use spring annotations in beans -->

	<bean class="org.dspace.perucris.externalservices.sunat.SunatProvider"/>

	<bean class="org.dspace.perucris.externalservices.sunat.UpdateItemWithInformationFromSunatService"/>

    <bean class="org.dspace.perucris.externalservices.sunat.SunatRestConnector">
        <property name="sunatUrl" value="${sunat.url}" />
        <property name="clientId" value="${sunat.clientid}" />
        <property name="clientSecret" value="${sunat.clientsecret}" />
    </bean>
</beans>