<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config /> <!-- allows us to use spring annotations in beans -->

    <bean class="org.dspace.renacyt.UpdateItemWithInformationFromRenacytService"/>

	<bean class="org.dspace.renacyt.RenacytProvider"/>

    <bean class="org.dspace.renacyt.RenacytRestConnector">
        <property name="renacytUrl" value="${renacyt.url}" />
        <property name="clientId" value="${renacyt.clientid}" />
        <property name="clientSecret" value="${renacyt.clientsecret}" />
    </bean>
</beans>