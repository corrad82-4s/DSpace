<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config /> <!-- allows us to use spring annotations in beans -->

	<bean class="org.dspace.externalservices.h_index.HindexProvider"/>

    <bean class="org.dspace.externalservices.h_index.UpdateHindexMetrics"/>

    <bean class="org.dspace.externalservices.h_index.HindexRestConnector">
        <property name="url" value="${hindex.url}" />
        <property name="apiKey" value="${hindex.apiKey}" />
        <property name="insttoken" value="${hindex.insttoken}" />
        <property name="enhanced" value="${hindex.enhanced}" />
    </bean>

</beans>